#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Type checking
echo "📝 Type checking..."
yarn type-check

# Build check (ensures code compiles)
echo "🏗️ Build check..."
yarn build

# Bundle size check
echo "📦 Checking bundle size..."
yarn size

echo "✅ Critical checks passed! (Lint warnings allowed for now)"
